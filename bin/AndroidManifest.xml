<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.funnywords"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".WRmainActivity"
            android:label="@string/title_activity_wrmain"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WordRoom"
            android:label="@string/app_name"
            android:parentActivityName=".LoadingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.funnywords.LoadingActivity" />
        </activity>
        <activity
            android:name=".LoadingActivity"
            android:label="@string/app_name"
            android:parentActivityName=".WRmainActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.funnywords.WRmainActivity" />
        </activity>
        <activity
            android:name=".WRScoreActivity"
            android:label="@string/title_activity_wrscore"
            android:parentActivityName=".WRmainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.funnywords.WRmainActivity" />
        </activity>
        <activity
            android:name=".TimeAttackActivity"
            android:label="@string/title_activity_time_attack"
            android:parentActivityName=".LoadingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.funnywords.LoadingActivity" />
        </activity>
        <activity
            android:name=".NewScoreActivity"
            android:label="@string/title_activity_new_score"
            android:parentActivityName=".WRmainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.funnywords.WRmainActivity" />
        </activity>
    </application>

</manifest>
