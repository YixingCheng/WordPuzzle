<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.funnywords"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.funnywords.WRmainActivity"
            android:label="@string/title_activity_wrmain"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.funnywords.WordRoom"
            android:label="@string/app_name"
            android:parentActivityName="com.funnywords.LoadingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.funnywords.LoadingActivity" />
        </activity>
        <activity
            android:name="com.funnywords.LoadingActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.funnywords.WRmainActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.funnywords.WRmainActivity" />
        </activity>
        <activity
            android:name="com.funnywords.WRScoreActivity"
            android:label="@string/title_activity_wrscore"
            android:parentActivityName="com.funnywords.WRmainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.funnywords.WRmainActivity" />
        </activity>
    </application>

</manifest>
